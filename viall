#!/bin/zsh
ctags *.cpp *.h 2>/dev/null
# which gtags ||{ sudo dnf -y install global;} && gtags
# `which vim || which vi` autofax.cpp autofax.h vorgaben.cpp DB.cpp DB.h konsole.cpp konsole.h -p -c "syntax on" -c "set number" -c "set autoindent" -c "set autoindent" -c "set tabstop=2" -c "set ignorecase" -c "set showmatch" -c "set magic" -c "set ruler" 
# DATEIEN="autofax.cpp autofax.h vorgaben.cpp DB.cpp DB.h konsole.cpp konsole.h man_en man_de Makefile install.sh viall .exrc"
DATEIEN="`find . -maxdepth 1 -name ${PWD##*/}.cpp -printf '%f\n'` `find . -maxdepth 1 -name ${PWD##*/}.h -printf '%f\n'` `find . -maxdepth 1 \( -name '*.cpp' -or -name '*.h' \) -not -path "*${PWD##*/}*" -printf '%f\n'|sort` man_?? Makefile install.sh $0 .exrc"
if [ "$1" = "nv" ]; then
 touch $DATEIEN
 make && make install && make git
else
`which vim || which vi` $DATEIEN -pNu .exrc
fi
