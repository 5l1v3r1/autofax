.OP \-ckzl|--capiklingelzahl <zahl>
.OP \-hkzl|--hylaklingelzahl <zahl>
.OP \-md|--maxdials <zahl>
.OP \-gz|--gleichziel
.OP \-ocri|--ocri
.OP \-ocra|--ocra
.OP \-afs|--anfaxstr <string>
